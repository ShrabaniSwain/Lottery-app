<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Background color when button is pressed -->
            <corners android:radius="20dp" /> <!-- Adjust the radius as per your preference -->
            <stroke
                android:color="#888888"
            android:width="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when button is not pressed -->
            <corners android:radius="20dp" /> <!-- Adjust the radius as per your preference -->
            <stroke
                android:color="#888888"
            android:width="1dp" />
        </shape>
    </item>
</selector>
