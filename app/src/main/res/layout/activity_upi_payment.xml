<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpiPaymentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payNowToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pay Now"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:textSize="25sp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvUpiId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payNowToolbar"
        android:text="UPI ID :"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/tvUpiIdNo"/>

    <TextView
        android:id="@+id/tvUpiIdNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payNowToolbar"
        android:text="sudipdas@oksbi"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivScanCode"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/scancode"
        app:layout_constraintTop_toBottomOf="@id/tvUpiIdNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvGpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gpay :"
        app:layout_constraintTop_toBottomOf="@id/ivScanCode"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGpayNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6294625797"
        app:layout_constraintTop_toBottomOf="@id/ivScanCode"
        app:layout_constraintLeft_toRightOf="@id/tvGpay"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhonePe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhonePe :"
        app:layout_constraintTop_toBottomOf="@id/ivScanCode"
        app:layout_constraintRight_toLeftOf="@id/tvPhonePeNo"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhonePeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8145004116"
        app:layout_constraintTop_toBottomOf="@id/ivScanCode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPAytmUpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGpay"
        android:text="Paytm Wallet :"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/tvPaytmUpiNo"/>

    <TextView
        android:id="@+id/tvPaytmUpiNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGpay"
        android:text="6294625797"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBankDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPAytmUpi"
        android:text="Bank Details"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBankDetails"
        android:layout_marginTop="15dp"
        android:id="@+id/cardImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="15dp"
        app:cardBackgroundColor="@color/background_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="2dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDFC Bank Limited"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/tvBank"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBank"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudip Das"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@id/tvAccount"
                app:layout_constraintTop_toBottomOf="@id/tvBankName"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAccount"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAccNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20068835206"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@id/tvAccountNumber"
                app:layout_constraintTop_toBottomOf="@id/tvAccountName"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAccountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintRight_toLeftOf="@id/tvType"
                app:layout_constraintTop_toBottomOf="@id/tvAccountName"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tvAccountType"
                app:layout_constraintTop_toBottomOf="@id/tvAccountName"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvIfsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC Code :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAccountNumber"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvIfscCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDFC0000849"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@id/tvIfsc"
                app:layout_constraintTop_toBottomOf="@id/tvAccNo"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch Name :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIfsc"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBranchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDFC0000849"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@id/tvBranch"
                app:layout_constraintTop_toBottomOf="@id/tvIfscCode"
                android:paddingBottom="10dp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/etEnterAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_box"
        android:textStyle="bold"
        android:hint="Enter Paid Amount"/>

    <TextView
        android:id="@+id/tvScreenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid Screenshot"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardImageView"
        android:paddingBottom="10dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardImageView"
        app:layout_constraintRight_toLeftOf="@id/tvScreenshot"/>

    <ImageView
        android:id="@+id/transactionImageView"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tvScreenshot"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        />

    <TextView
        android:id="@+id/btnSubmitPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Your Payment"
        android:padding="12dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/transactionImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_box"
        android:backgroundTint="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>