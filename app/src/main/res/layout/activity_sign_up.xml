<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SIgnUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signUPToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:textSize="22sp"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signUPToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Name"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPersonName"
        android:background="@drawable/background_box"/>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Mobile Number"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:inputType="number"
        android:background="@drawable/background_box"/>

    <EditText
        android:id="@+id/etEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etMobileNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Email ID"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/background_box"/>

    <EditText
        android:id="@+id/etCreateMpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmailId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Create MPIN"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:inputType="number"
        android:background="@drawable/background_box"/>

    <EditText
        android:id="@+id/etConfirmMpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etCreateMpin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Confirm MPIN"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:inputType="number"
        android:background="@drawable/background_box"/>

    <TextView
        android:id="@+id/btnSIgnUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIgn Up"
        android:background="@drawable/background_box"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etConfirmMpin"
        android:layout_marginHorizontal="70dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>